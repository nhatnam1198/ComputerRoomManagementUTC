<script>
    $(document).ready(function () {
        setTimeout(function () {
            $.ajax({
                url: 'https://localhost:44388/home/index',
                method: 'GET',
                type: 'GET',
                beforeSend: function (request) {
                    request.setRequestHeader("Authorization", 'Bearer ' + '@jwtToken');
                },
                success: function (res) {
                    console.log(res)
                    $(document).replaceWith($(res));
                }
            });
        });
    })

</script>
